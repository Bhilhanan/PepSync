<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:contentDescription="pic"
        android:id="@+id/search_display_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"/>
    
    <TextView 
        android:id="@+id/search_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textColor="#000"
		android:textSize="20sp"
		android:gravity="center"
		android:layout_toLeftOf="@id/search_display_picture"
		/>
    
    <TextView 
        android:id="@+id/search_groups"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@id/search_name"
        android:layout_toLeftOf="@id/search_display_picture"
        />
    
    <TextView 
        android:id="@+id/search_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
		android:layout_below="@id/connections_interest"
		/>
    

</RelativeLayout>
