<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/datamodel_image"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:contentDescription="Display Pic"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_action_user" />

<TextView
    android:id="@+id/textline"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:layout_toRightOf="@id/datamodel_image"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="5dp" />
<TextView 
    android:id="@+id/lat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/datamodel_image"
    android:layout_below="@id/textline"
    android:layout_alignBottom="@id/datamodel_image"
    android:layout_marginLeft="5dp" />
<TextView 
    android:id="@+id/lon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/lat"
    android:layout_below="@id/textline"
    android:layout_alignBottom="@id/datamodel_image"
    android:layout_marginLeft="10dp" />

 </RelativeLayout>